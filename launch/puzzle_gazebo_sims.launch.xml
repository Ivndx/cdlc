       value="$(find-pkg-share puzzlebot_description)/urdf/mcr2_robots/puzzlebot_jetson_lidar_ed.xacro" />

  <include file="$(find-pkg-share puzzlebot_gazebo)/launch/bringup_simulation_simple_launch.py" />
